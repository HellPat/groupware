<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    findUnusedPsalmSuppress="true"
    findUnusedVariablesAndParams="true"
>
    <fileExtensions>
        <extension name=".php" />
        <extension name=".twig" checker="./vendor/psalm/plugin-symfony/src/Twig/TemplateFileAnalyzer.php"/>
    </fileExtensions>
    
    <projectFiles>
        <directory name="src" />
        <directory name="tests" />
        <directory name="config" />
        <directory name="public" />
        <directory name="bin" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    
    <extraFiles>
        <directory name="var/cache/dev/Symfony/Config" /> <!-- https://github.com/psalm/psalm-plugin-symfony/issues/201 -->
    </extraFiles>
    
    <stubs>
        <file name="vendor/symfony/dependency-injection/Loader/Configurator/ContainerConfigurator.php" />
    </stubs>

    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin">
            <containerXml>var/cache/dev/App_KernelDevDebugContainer.xml</containerXml>
        </pluginClass>
    </plugins>
    
    <forbiddenFunctions>
        <function name="dd" />
        <function name="dump" />
        <function name="var_dump" />
        <function name="die" />
        <function name="sleep" />
    </forbiddenFunctions>
    
    <issueHandlers>
        <PossiblyUnusedProperty errorLevel="suppress" />
    </issueHandlers>
</psalm>
