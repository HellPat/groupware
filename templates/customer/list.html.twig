{% extends 'base.html.twig' %}

{% block main %}
    <h1>Customers</h1>

    <table>
        <thead>
                <tr>
                    <th>id</th>
                    <th>email</th>
                    <th>name</th>
                    <th>created_at</th>
                </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
                <tr>
                    <td>{{ customer.id }}</td>
                    <td>{{ customer.email }}</td>
                    <td>{{ customer.name }}</td>
                    <td>{{ customer.createdAt|date }}</td>
                </tr>
            {% else %}
                No Customers found
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
